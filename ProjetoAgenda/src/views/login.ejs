<%- include('includes/head'); %>
    <%- include('includes/nav'); %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center"> Criar conta ou Entrar </h1>
                    <p class="text-center lead">Faça o login ou crie sua conta abaixo: </p>
                </div>

                <!-- Ira mostrar as mensagens (erros - caso tenha) -->
                <%- include('includes/messages'); %>

                <div class="row">

                    <!-- CADASTRO -->
                    <div class="col-lg">
                        <h4> Faça o seu cadastro</h4>
                        <p>Se você ainda não tem conta, preencha o formulário abaixo: </p>
                        
                        <!-- action = rota para enviar a requisicao -->
                        <form action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                              <label>E-mail</label>
                              <input type="email" class="form-control" name="email">
                            </div>
                            <div class="mb-3">
                                <label>Senha</label>
                                <input type="password" class="form-control" name="password">
                              </div>
                            <button type="submit" class="btn btn-primary">Criar minha conta</button>
                          </form>
                    </div>

                    <!-- LOGIN -->
                    <div class="col-lg">
                        <h4> Faça o seu login </h4>
                        <p>Se você já tem uma conta, faça o seu login abaixo: </p>
                        
                        <!-- action = rota para enviar a requisicao -->
                        <form action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                              <label>E-mail</label>
                              <input type="email" class="form-control" name="email">
                            </div>
                            <div class="mb-3">
                                <label>Senha</label>
                                <input type="password" class="form-control" name="password">
                              </div>
                            <button type="submit" class="btn btn-primary">Entrar</button>
                          </form>
                    </div>
                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer'); %>